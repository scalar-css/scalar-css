[class*='transform'] {
  transform: translateX(var(--translate-x, 0)) translateY(var(--translate-y, 0))
    rotate(var(--rotate, 0)) skewX(var(--skew-x, 0)) skewY(var(--skew-y, 0))
    scaleX(var(--scale-x, 1)) scaleY(var(--scale-y, 1));
}

.transform {
  transform: translateX(var(--translate-x, 0)) translateY(var(--translate-y, 0))
    rotate(var(--rotate, 0)) skewX(var(--skew-x, 0)) skewY(var(--skew-y, 0))
    scaleX(var(--scale-x, 1)) scaleY(var(--scale-y, 1));
}
