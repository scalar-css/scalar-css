.rowLayout {
  --rowLayoutGap: var(--baselineUnit);

  display: flex;
  flex-direction: column;
  row-gap: var(--rowLayoutGap);
}

.columnLayout {
  --columnGap: var(--baselineUnit);

  display: flex;
  column-gap: var(--columnGap);
}
